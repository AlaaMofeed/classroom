{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "siteLocation": {
      "type": "string"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "defaultValue": "Free"
    },
    "workerSize": {
      "type": "string",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "defaultValue": "0"
    },
    "CLASSROOM_WEBHOOK_URL_PREFIX": {
      "type": "string"
    },
    "GITHUB_CLIENT_ID": {
      "type": "string"
    },
    "GITHUB_CLIENT_SECRET": {
      "type": "securestring"
    },
    "NON_STAFF_GITHUB_ADMIN_IDS": {
      "type": "securestring"
    },
    "GOOGLE_CLIENT_ID": {
      "type": "securestring"
    },
    "GOOGLE_CLIENT_SECRET": {
      "type": "securestring"
    },
    "repoUrl": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2014-06-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverFarms",
      "location": "[parameters('siteLocation')]",
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "sku": "[parameters('sku')]",
        "workerSize": "[parameters('workerSize')]",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2014-06-01",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/Sites",
      "location": "[parameters('siteLocation')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "empty"
      },
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarm": "[parameters('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2014-04-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', parameters('siteName'))]"
          ],
          "properties": {
            "env": [
              {
                "name": "CLASSROOM_WEBHOOK_URL_PREFIX",
                "value": "[parameters('CLASSROOM_WEBHOOK_URL_PREFIX')]"
              },
              {
                "name": "GITHUB_CLIENT_ID",
                "value": "[parameters('GITHUB_CLIENT_ID')]"
              },
              {
                "name": "GITHUB_CLIENT_SECRET",
                "value": "[parameters('GITHUB_CLIENT_SECRET')]"
              },
              {
                "name": "NON_STAFF_GITHUB_ADMIN_IDS",
                "value": "[parameters('NON_STAFF_GITHUB_ADMIN_IDS')]"
              },
              {
                "name": "GOOGLE_CLIENT_ID",
                "value": "[parameters('GOOGLE_CLIENT_ID')]"
              },
              {
                "name": "GOOGLE_CLIENT_SECRET",
                "value": "[parameters('GOOGLE_CLIENT_SECRET')]"
              }
            ]
          }
        },
        {
          "apiVersion": "2014-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    }
  ]
}
